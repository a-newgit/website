---
interface Props {
  headline: string;
  photo?: string;
}

const { headline, photo } = Astro.props;
---

<section class="hero">
  <div class="hero-grid">
    <div class="hero-content">
      <h1 class="hero-headline">{headline}</h1>
      <div class="hero-intro">
        <slot />
      </div>
    </div>
    {
      photo && (
        <div class="hero-photo-wrapper">
          <img
            src={photo}
            alt="Agnimitra Pathak"
            class="hero-photo"
            width="400"
            height="280"
            decoding="async"
          />
        </div>
      )
    }
  </div>
</section>

<style>
  .hero {
    padding: var(--space-12) 0 var(--space-8);
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    align-items: start;
  }

  @media (min-width: 640px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
    }
  }

  .hero-content {
    max-width: 32rem;
  }

  .hero-headline {
    font-size: var(--text-3xl);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
    margin-bottom: var(--space-6);
  }

  .hero-intro {
    font-size: var(--text-base);
    line-height: 1.75;
    color: var(--color-text);
  }

  .hero-intro :global(p) {
    margin-bottom: var(--space-4);
  }

  .hero-intro :global(p:last-child) {
    margin-bottom: 0;
  }

  .hero-intro :global(a) {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  .hero-intro :global(a:hover) {
    color: var(--color-text-secondary);
  }

  .hero-photo-wrapper {
    display: flex;
    justify-content: flex-end;
  }

  .hero-photo {
    width: 100%;
    max-width: 400px;
    height: auto;
    object-fit: cover;
    border-radius: var(--radius-sm);
  }

  /* Mobile: photo above content */
  @media (max-width: 639px) {
    .hero-grid {
      display: flex;
      flex-direction: column-reverse;
    }

    .hero-photo {
      max-width: 100%;
    }
  }
</style>
