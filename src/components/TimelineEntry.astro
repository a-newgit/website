---
interface Props {
  company: string;
  url?: string;
  role: string;
  years: string;
  color?: string;
}

const { company, url, role, years, color = "#6B7280" } = Astro.props;
---

<article class="timeline-entry">
  <div class="timeline-left">
    <span class="timeline-marker" style={`background-color: ${color};`}></span>
    {
      url ? (
        <a href={url} target="_blank" rel="noopener" class="timeline-company">
          {company}
        </a>
      ) : (
        <span class="timeline-company">{company}</span>
      )
    }
  </div>
  <div class="timeline-right">
    <span class="timeline-role">{role}</span>
    <span class="timeline-years">{years}</span>
  </div>
</article>

<style>
  .timeline-entry {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    padding: var(--space-3) 0;
    align-items: baseline;
  }

  .timeline-left {
    display: flex;
    align-items: baseline;
    gap: var(--space-3);
  }

  .timeline-marker {
    width: 10px;
    height: 10px;
    border-radius: 2px;
    flex-shrink: 0;
    position: relative;
    top: 1px;
  }

  .timeline-company {
    font-size: var(--text-base);
    font-weight: 400;
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  a.timeline-company:hover {
    color: var(--color-text-secondary);
  }

  .timeline-right {
    display: flex;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .timeline-role {
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .timeline-years {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  /* Mobile: stack layout */
  @media (max-width: 639px) {
    .timeline-entry {
      grid-template-columns: 1fr;
      gap: var(--space-1);
    }

    .timeline-right {
      padding-left: calc(10px + var(--space-3));
    }
  }
</style>
