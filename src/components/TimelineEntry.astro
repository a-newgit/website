---
interface Props {
  company: string;
  url?: string;
  role: string;
  years: string;
  color?: string;
  description?: string;
  bullets?: string[];
}

const {
  company,
  url,
  role,
  years,
  color = "#6B7280",
  description,
  bullets,
} = Astro.props;
---

<article class="timeline-entry">
  <div class="timeline-header">
    <span class="timeline-marker" style={`background-color: ${color};`}></span>
    <span class="timeline-years">{years}</span>
  </div>
  <div class="timeline-content">
    <h3 class="timeline-role">
      {role} at{" "}
      {
        url ? (
          <a href={url} target="_blank" rel="noopener" class="timeline-company">
            {company}
          </a>
        ) : (
          <span class="timeline-company">{company}</span>
        )
      }
    </h3>
    {description && <p class="timeline-description">{description}</p>}
    {
      bullets && bullets.length > 0 && (
        <ul class="timeline-bullets">
          {bullets.map((bullet) => (
            <li class="timeline-bullet">
              <span class="bullet-arrow">â†’</span>
              {bullet}
            </li>
          ))}
        </ul>
      )
    }
  </div>
</article>

<style>
  .timeline-entry {
    padding: var(--space-6) 0;
  }

  .timeline-entry:first-child {
    padding-top: 0;
  }

  .timeline-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .timeline-marker {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 2px;
    flex-shrink: 0;
  }

  .timeline-years {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .timeline-content {
    padding-left: calc(12px + var(--space-3));
  }

  .timeline-role {
    font-size: var(--text-base);
    font-weight: 600;
    margin-bottom: var(--space-2);
    line-height: 1.4;
  }

  .timeline-company {
    font-weight: 600;
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  a.timeline-company:hover {
    color: var(--color-text-secondary);
  }

  .timeline-description {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: var(--space-3);
    max-width: 52rem;
  }

  .timeline-bullets {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .timeline-bullet {
    display: flex;
    gap: var(--space-2);
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .timeline-bullet:last-child {
    margin-bottom: 0;
  }

  .bullet-arrow {
    flex-shrink: 0;
    color: var(--color-text-muted);
  }
</style>
