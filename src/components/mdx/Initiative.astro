---
interface Props {
  num: string | number;
  title: string;
}

const { num, title } = Astro.props;
---

<div class="initiative">
  <div class="initiative-header">
    <span class="initiative-number">Initiative {num}</span>
    <h3 class="initiative-title">{title}</h3>
  </div>

  <div class="initiative-body">
    <div class="initiative-section">
      <span class="initiative-label">Research</span>
      <div class="initiative-content">
        <slot name="research" />
      </div>
    </div>

    <div class="initiative-section">
      <span class="initiative-label">Response</span>
      <div class="initiative-content">
        <slot name="response" />
      </div>
    </div>

    <slot name="principles" />

    <div class="initiative-section">
      <span class="initiative-label">Outcomes</span>
      <div class="initiative-content">
        <slot name="outcomes" />
      </div>
    </div>
  </div>
</div>

<style>
  .initiative {
    margin: var(--space-12) 0;
    padding: var(--space-6);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-lg);
  }

  .initiative-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .initiative-number {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: var(--space-1);
  }

  .initiative-title {
    font-size: var(--text-xl);
    margin: 0;
    line-height: 1.3;
  }

  .initiative-body {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .initiative-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .initiative-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .initiative-content {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text-secondary);
  }

  .initiative-content :global(p) {
    margin-bottom: var(--space-3);
  }

  .initiative-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .initiative-content :global(ul),
  .initiative-content :global(ol) {
    margin: 0;
    padding-left: var(--space-5);
  }

  .initiative-content :global(li) {
    margin-bottom: var(--space-1);
  }
</style>
