---
interface Props {
  url: string;
  title?: string;
}

const { url, title = "Figma prototype" } = Astro.props;
---

<figure class="figma-embed">
  <div class="embed-wrapper">
    <iframe
      src={url}
      title={title}
      allowfullscreen
      loading="lazy"
    ></iframe>
  </div>
  {title && title !== "Figma prototype" && <figcaption class="caption">{title}</figcaption>}
</figure>

<style>
  .figma-embed {
    margin: var(--space-8) 0;
  }

  .embed-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--color-border-subtle);
    background-color: var(--color-bg-alt);
  }

  .embed-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .caption {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-align: center;
    margin-top: var(--space-3);
  }
</style>
